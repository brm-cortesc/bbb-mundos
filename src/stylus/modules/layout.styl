.container
	&-counter
		&::before
			path('bbb-cereza-limon.png')
			background-size 100%
			content ''
			display block
			height 34.8rem
			left 50%
			pointer-events none
			position absolute
			top -30%
			transform translate3d(-@left,0,0)
			width 11.5rem
			z-index -1


	&-divider
		centrarAb()
		cuadrado(100%)
		// pointer-events none
		z-index 0

		&::before
			background-color #fff
			box-shadow 7px 7px 5px 0px rgba(0,0,0,0.3)
			content ''
			height 100%
			left ( (100% - 2%) / 2 )
			position absolute
			top 0
			width 2%
			z-index 1

	&-logo
		background-color white
		circ(38rem)
		margin -19rem auto 0
		position relative
		box-shadow 7px 7px 5px 0px rgba(0,0,0,0.3)
		z-index 2

		h1, h2
			bottom 0
			position absolute
			height 15rem
			width 27.8rem
			left 5.8rem
			bottom 4rem
			z-index 3
			img
				display block
				height auto
				max-width 100%
				width 100%

	&-message
		background-color #fff
		border-radius 100%
		bottom -17%
		box-shadow 7px 7px 5px 0px rgba(0,0,0,0.3)
		height 0
		left 50%
		padding-bottom 34.5rem
		position absolute
		text-align center
		transform translate3d(-@left,0,0)
		width @padding-bottom


	&-resultados
		bottom -18%
		img
			display block
			height auto
			margin 4rem auto 0
			width 100%
			max-width 60%

		.btn
			margin-top 1rem
			max-width 60%

.row
	margin 0 auto
	max-width $SiteWidth
	position relative

	for x in (1..12)

		.col-lg-{x}, .col-md-{x}, .col-sm-{x}, .col-xs-{x}
			padding-left $Gutter
			padding-right $Gutter
			transition width ease-in-out 0.3s
